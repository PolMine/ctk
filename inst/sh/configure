#! /bin/sh

HEAD_REGISTRY='REGISTRY_HEAD'

TAIL_REGISTRY='REGISTRY_TAIL'

mkdir ${R_PACKAGE_DIR}/extdata
mkdir ${R_PACKAGE_DIR}/extdata/cwb
mkdir ${R_PACKAGE_DIR}/extdata/cwb/registry

echo $HEAD_REGISTRY > ${R_PACKAGE_DIR}/extdata/cwb/registry/CORPUS
echo "HOME ${R_PACKAGE_DIR}/extdata/cwb/indexed_corpora/CORPUS" >> ${R_PACKAGE_DIR}/extdata/cwb/registry/CORPUS
echo "# optional info file" >> ${R_PACKAGE_DIR}/extdata/cwb/registry/CORPUS
echo "INFO ${R_PACKAGE_DIR}/extdata/cwb/indexed_corpora/CORPUS/.info" >> ${R_PACKAGE_DIR}/extdata/cwb/registry/CORPUS
echo "" >> ${R_PACKAGE_DIR}/extdata/cwb/registry/CORPUS

echo $TAIL_REGISTRY >> ${R_PACKAGE_DIR}/extdata/cwb/registry/CORPUS

export CORPUS_REGISTRY=${R_PACKAGE_DIR}/extdata/cwb/registry
